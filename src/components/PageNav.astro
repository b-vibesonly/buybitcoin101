---
// PageNav.astro
const pages = [
  { href: "/what-is-money", title: "What is money" },
  { href: "/why-am-i-broke", title: "Why am I broke" },
  { href: "/10-bitcoin-facts", title: "10 Bitcoin facts" },
  { href: "/am-i-too-late", title: "Am I too late" },
  { href: "/where-to-buy", title: "Where to buy" },
  { href: "/self-custody", title: "What is self custody" }
];

const currentPath = Astro.url.pathname;
---

<aside class="page-nav">
  <h3>Other Pages</h3>
  <ul class="nav-list">
    {pages.map(page => (
      <li class="nav-item">
        <a 
          href={page.href} 
          class={`nav-link ${currentPath === page.href ? 'active' : ''}`}
        >
          {page.title}
        </a>
      </li>
    ))}
  </ul>
</aside>

<style>
  .page-nav {
    background: rgba(255, 255, 255, 0.5);
    padding: var(--spacing-md);
    border-radius: 8px;
    border: 1px solid var(--color-border);
    box-shadow: 0 2px 4px rgba(120, 119, 108, 0.1);
  }
  
  .page-nav h3 {
    font-family: var(--font-mono);
    font-size: 1.1rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
    border-bottom: 1px solid var(--color-border);
    padding-bottom: var(--spacing-xs);
  }
  
  .nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .nav-item {
    margin-bottom: var(--spacing-xs);
  }
  
  .nav-link {
    display: block;
    padding: var(--spacing-xs);
    color: var(--color-text-light);
    text-decoration: none;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    border-radius: 4px;
    transition: all 0.2s ease;
  }
  
  .nav-link:hover {
    background: rgba(120, 119, 108, 0.1);
    color: var(--color-text);
    transform: translateX(4px);
  }
  
  .nav-link.active {
    background: var(--color-border);
    color: var(--color-text);
    font-weight: bold;
  }
</style>