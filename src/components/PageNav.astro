---
// PageNav.astro
const pages = [
  { href: "/what-is-money", title: "What is money" },
  { href: "/why-am-i-broke", title: "Why am I broke" },
  { href: "/10-bitcoin-facts", title: "10 Bitcoin facts" },
  { href: "/am-i-too-late", title: "Am I too late" },
  { href: "/where-to-buy", title: "Where to buy" },
  { href: "/self-custody", title: "What is self custody" }
];

const currentPath = Astro.url.pathname;
---

<aside class="page-nav">
  <ul class="nav-list">
    {pages.map(page => (
      <li class="nav-item">
        <a 
          href={page.href} 
          class={`nav-link ${currentPath === page.href ? 'active' : ''}`}
        >
          {page.title}
        </a>
      </li>
    ))}
  </ul>
</aside>

<style>
  .page-nav {
    background: var(--color-bg-alt);
    padding: 0;
    padding-top: var(--spacing-lg);
    padding-bottom: var(--spacing-lg);
    padding-right: var(--spacing-lg);
    border-radius: var(--border-radius);
    border: 1px solid var(--color-border);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    max-width: 800px;
    margin: 0;
    width: 100%;
    box-sizing: border-box;
  }
  
  .page-nav h3 {
    font-family: var(--font-sans);
    font-size: 1.25rem;
    margin: 0 0 var(--spacing-md) 0;
    color: var(--color-text);
    border-bottom: 1px solid var(--color-border);
    padding-bottom: var(--spacing-sm);
    font-weight: 600;
    letter-spacing: 0.5px;
  }
  
  .nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: var(--spacing-sm);
  }
  
  .nav-item {
    margin: 0;
  }
  
  .nav-link {
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--spacing-sm) var(--spacing-md);
    color: var(--color-text-light);
    text-decoration: none;
    border-radius: var(--border-radius);
    transition: var(--transition);
    font-family: var(--font-mono);
    font-size: 0.9rem;
    background: rgba(0, 0, 0, 0.2);
    border: 1px solid var(--color-border);
    min-height: 44px;
  }
  
  .nav-link:hover {
    background: rgba(0, 0, 0, 0.3);
    color: var(--color-text);
    border-color: white;
    transform: translateY(-1px);
  }
  
  .nav-link:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 2px;
  }
  
  .nav-link.active {
    background: white;
    color: black;
    font-weight: 500;
    border-color: var(--color-border);
  }
  
  @media (max-width: 768px) {
    .page-nav {
      margin: 0;
      padding: var(--spacing-md);
    }
    
    .nav-list {
      grid-template-columns: 1fr;
    }
  }
  
  @media (prefers-reduced-motion: reduce) {
    .nav-link {
      transition: none;
    }
    
    .nav-link:hover {
      transform: none;
    }
  }
</style>