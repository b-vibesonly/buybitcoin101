---
// src/components/PageHeader.astro
export interface Props {
  title: string;
  color: string;
  textColor?: string;
  subtitle?: string;
}

const { title, color, textColor = '#111', subtitle } = Astro.props;
---

<section class="page-header-section">
  <div class="page-header" style={`--page-color: ${color}; --page-text: ${textColor}`}>
    <h1 class="page-title">{title}</h1>
    {subtitle && <p class="page-subtitle">{subtitle}</p>}
  </div>
</section>

<style>
  .page-header-section {
    width: 100%;
  }
  
  .page-header {
    background: var(--page-color);
    color: var(--page-text, white);
    text-align: center;
    padding: 1rem 1.5rem;
    min-height: 60px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  
  .page-title {
    font-family: var(--font-mono);
    font-weight: bold;
    font-size: 1rem;
    margin: 0;
    color: inherit;
    text-align: center;
    line-height: 1.2;
  }
  
  .page-subtitle {
    margin: 0 auto;
    color: inherit;
    opacity: 0.9;
    font-size: 1rem;
    line-height: 1.5;
    text-align: center;
    max-width: 800px;
  }
  
  @media (min-width: 640px) {
    .page-header {
      padding: 1.25rem 2rem;
      min-height: 70px;
    }
    
    .page-title {
      font-size: 1.25rem;
      letter-spacing: -0.25px;
    }
    
    .page-subtitle {
      font-size: 1.1rem;
      line-height: 1.6;
      padding: 0 1rem;
    }
  }
  
  .page-title:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }
</style>
