---
// src/components/CircleLink.astro
export interface Props {
  href: string;
  text: string;
  color?: string;
  textColor?: string;
  style?: string;
}

const { 
  href, 
  text, 
  color = '#F7931A',
  textColor = 'white',
  style = ''
} = Astro.props;
---

<a 
  href={href}
  class="text-link"
  style={`
    --link-color: ${color};
    color: ${textColor};
  `}
>
  {text}
</a>

<style>
  .text-link {
    display: block;
    width: 100%;
    text-decoration: none;
    font-weight: bold;
    font-family: var(--font-mono);
    padding: 1rem;
    border-radius: 4px;
    background-color: var(--link-color, #F7931A);
    transition: opacity 0.2s ease, transform 0.2s ease;
    text-align: center;
    margin-bottom: 0.5rem;
    box-sizing: border-box;
  }
  
  .text-link:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  @media (min-width: 768px) {
    .text-link {
      display: flex;
      align-items: center;
      justify-content: center;
      width: auto;
      height: 100%;
      padding: 0.5rem 1.5rem;
      margin: 0 0.5rem 1rem 0;
    }
  }
</style>
