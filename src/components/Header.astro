---
// Header.astro
// Simple header component with logo
export interface Props {
  showDonation?: boolean;
}

const { showDonation = false } = Astro.props;
---

<header class="header">
  <div class="logo-container">
    <a href="/" class="logo-link">
      <img 
        src="/images/b101-trimmed.png" 
        alt="Bitcoin hero image" 
        class="logo"
        loading="eager"
        width="400"
        height="240"
      />
    </a>
    {showDonation && (
      <div class="donation-address">
        <p class="donation-label">Support this site:</p>
        <code class="btc-address">bc1qxy2kgdygjrsqtzq2n0yrf2493p83kkfjhx0wlh</code>
      </div>
    )}
  </div>
</header>

<style>
  .header {
    width: 100%;
    background: var(--color-bg);
    position: relative;
    border-bottom: 1px solid var(--color-border);
  }
  
  .logo-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: var(--header-height);
    padding: var(--spacing-md);
    gap: var(--spacing-sm);
  }
  
  .logo-link {
    text-decoration: none;
    display: inline-block;
    transition: transform 0.2s ease;
  }
  
  .logo-link:hover {
    transform: scale(1.05);
  }
  
  .logo {
    height: auto;
    width: auto;
    max-width: 90%;
    max-height: 120px;
    object-fit: contain;
    object-position: center;
    display: block;
    margin: 0 auto;
  }
  
  .donation-address {
    text-align: center;
    margin-top: var(--spacing-sm);
  }
  
  .donation-label {
    font-size: 0.875rem;
    color: var(--color-text-light);
    margin-bottom: var(--spacing-xs);
  }
  
  .btc-address {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    background: #f5f5f5;
    padding: var(--spacing-xs);
    border-radius: 4px;
    color: #333;
    word-break: break-all;
    display: inline-block;
    border: 1px solid #e0e0e0;
    max-width: 100%;
    line-height: 1.3;
  }
  
  @media (min-width: 768px) {
    .logo {
      max-height: 140px;
    }
    
    .btc-address {
      font-size: 0.75rem;
      padding: var(--spacing-xs) var(--spacing-sm);
    }
  }
  
  @media (min-width: 1024px) {
    .logo {
      max-height: 160px;
    }
  }
</style>
