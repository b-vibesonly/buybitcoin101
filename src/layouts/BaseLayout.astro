---
// src/layouts/BaseLayout.astro
interface Props {
  title: string;
  description?: string;
  pageColor?: string;
}

const { title, description = 'Learn about Bitcoin and how to get started', pageColor } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#121212">
    <title>{title} | Buy Bitcoin 101</title>
    <link rel="stylesheet" href="/styles/global.css" />
    <style>
      .footer {
        text-align: center;
        padding: var(--spacing-lg) var(--spacing-md);
        border-top: 1px solid var(--color-border);
        margin-top: var(--spacing-xl);
      }
      
      .nostr-link {
        color: var(--color-text-light);
        text-decoration: none;
        font-family: var(--font-mono);
        font-size: 0.8rem;
        transition: color 0.2s ease;
      }
      
      .nostr-link:hover {
        color: var(--color-text);
      }
      
      .disclaimer {
        margin-bottom: var(--spacing-md);
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      

      
      .disclaimer p {
        margin: 0;
        color: var(--color-text-light);
        font-size: 0.875rem;
        line-height: 1.5;
      }
      
      /* Ensure consistent content styling */
      .main-content {
        width: 100%;
        max-width: var(--content-width);
        margin: 0 auto;
        padding: 0 var(--spacing-md);
        box-sizing: border-box;
      }
      
      @media (min-width: 768px) {
        .main-content {
          padding: 0 var(--spacing-lg);
        }
      }
    </style>
  </head>
  <body class="min-h-screen bg-black text-white flex flex-col" style={pageColor ? `--page-color: ${pageColor};` : ''}>
    <main class="flex-grow">
      <div class="main-content">
        <slot />
      </div>
    </main>
    <footer class="py-6 text-center text-sm text-gray-500">
      <div class="container mx-auto px-4">
        <div class="disclaimer">
          <div class="disclaimer-content">
            <p>This website is a personal project created for educational purposes only. It reflects the author's opinions and experiences with Bitcoin technology. Nothing on this site should be considered financial or investment advice.</p>
          </div>
        </div>
        <a href="https://nostr.com/npub14tqtqmj23m4d4huy7zw9e3s3vphcqnw2mpd4c7zrcjuhlm5w2m9sgszufh" class="nostr-link">nostr@9x9</a>
      </div>
    </footer>
  </body>
</html>
