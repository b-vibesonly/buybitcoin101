---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import CircleLink from '../components/CircleLink.astro';
---

<BaseLayout title="Home">
    <Header showDonation={true} />
    
    <main class="main-content">
      <div class="container">
        <div class="links-grid">
          <CircleLink href="/what-is-money" text="What is money" color="#00E5FF" textColor="#111" />
          <CircleLink href="/why-am-i-broke" text="Why am I broke" color="#7C4DFF" textColor="white" />
          <CircleLink href="/10-bitcoin-facts" text="10 Bitcoin facts" color="#FFEA00" textColor="#111" />
          <CircleLink href="/am-i-too-late" text="Am I too late" color="#00E676" textColor="#111" />
          <CircleLink href="/where-to-buy" text="Where to buy" color="#FF4081" textColor="white" />
          <CircleLink href="/self-custody" text="What is self custody" color="#FF2D55" textColor="white" />
        </div>
      </div>
    </main>

    <style>
      .links-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: var(--spacing-md);
        width: 100%;
        padding: var(--spacing-md) 0;
        max-width: 400px;
        margin: 0 auto;
      }

      @media (min-width: 600px) {
        .links-grid {
          grid-template-columns: repeat(3, 1fr);
          max-width: 600px;
          gap: var(--spacing-lg);
        }
      }

      @media (min-width: 1024px) {
        .links-grid {
          grid-template-columns: repeat(6, 1fr);
          max-width: 1000px;
          gap: var(--spacing-md);
          padding: var(--spacing-lg) 0;
        }
      }

      @media (min-width: 1200px) {
        .links-grid {
          gap: var(--spacing-lg);
        }
      }
    </style>
</BaseLayout>
